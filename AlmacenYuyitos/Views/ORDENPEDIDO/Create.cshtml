@model AlmacenYuyitos.Models.ORDENPEDIDO

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">PASO 1</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Seleccionar Proveedor</h6>
            </div>
            <div class="card-body">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.PROVEEDOR_PROVEEDORID, "PROVEEDOR_PROVEEDORID", htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.DropDownList("PROVEEDOR_PROVEEDORID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PROVEEDOR_PROVEEDORID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" onclick="location.href='/DetallePedido/Create';" />


                        </div>
                    </div>
                </div>

                <div class="form-horizontal" id="Detalle">
                </div>


            </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function ()
                console.log('#ORDENPEDIDO_ORDENPEDIDOID');
            });

        $('#PROVEEDOR_PROVEEDORID').on('change', function () {
            $('#Detalle').html('');
        });

        $('#PROVEEDOR_PROVEEDORID').on('change', function () {
            var idProveedor = $(this).find(":selected").text();
            getDatos(idProveedor);
        });

        function getDatos(idProveedor) {
            $.ajax({
                url: '/ORDENPEDIDO/GetDetalle',
                type: 'POST',
                data: { proveedorId: idProveedor },
                success: function (result) {
                    $('#Detalle').html(result);
                },
                error: function () {
                }
            });
        }
    </script>
}