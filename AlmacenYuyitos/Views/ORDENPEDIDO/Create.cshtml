@model AlmacenYuyitos.Models.ORDENPEDIDO
@{
                /**/

                ViewBag.Title = "Create";
}
<h2 class="text-center">PASO 1</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Seleccionar Proveedor</h6>
        </div>
        <div class="card-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PROVEEDOR_PROVEEDORID, "RAZON SOCIAL", htmlAttributes: new { @class = "control-label col-md-6 offset-md-2" })
                    <div class="col-md-6 offset-md-2">
                        @Html.DropDownList("PROVEEDOR_PROVEEDORID", null, "Seleccionar Proveedor", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PROVEEDOR_PROVEEDORID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 text-center">
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <a href="/DetallePedido/Index" class="btn btn-secondary btn-user btn-block">
                        VOLVER
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <a href="@Url.Action("Create", "ORDENPEDIDO")" class="btn btn-primary btn-user btn-block">
                        LIMPIAR
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="SIGUIENTE" class="form-group btn btn-success btn-user btn-block" />
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}