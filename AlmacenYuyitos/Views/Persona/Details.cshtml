        @Html.ActionLink("Edit", "Edit", new { id = Model.PERSONAID }, new { @class="btn btn-secondary btn-user btn-block" })
    </p>*@

@section Scripts {
<script>
    $(function () {

    });

    //$('#PROVEEDORID').on('change', function () {
    //    $('#tabla').html('');
    //});

    
        var idOrden = @Model.PERSONAID;
        getDatos(idOrden);
    

    function getDatos(idOrden) {
        $.ajax({
            url: '/VENTADETALLE/Index',
            type: 'POST',
            data: { ordenId: idOrden },
            success: function (result) {
                $('#tabla').html(result);
            },
            error: function () {
            }
        });
    }
</script>
    }
    