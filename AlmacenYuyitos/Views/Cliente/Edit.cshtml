@model AlmacenYuyitos.Models.Cliente

@{
    ViewBag.Title = "Fiados";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CLIENTEID)

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Estado cliente</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h4>
                                @Html.Label("Rut: ")
                                @Html.DisplayFor(model => model.PERSONA.RUT)
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 text-center">
                    <div class="form-group">
                        <div class="col-md-12">
                            <h4>
                                @Html.Label("Nombre: ")
                                @Html.DisplayFor(model => model.PERSONA.NOMBRE)
                                @Html.DisplayFor(model => model.PERSONA.APPATERNO)
                            </h4>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.DropDownList("CATEGORIAID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CATEGORIAID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6 text-center">
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="GUARDAR" class="form-group btn btn-primary btn-user btn-block" />
                </div>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <a href="/Cliente/Index" class="btn btn-secondary btn-user btn-block">
                        VOLVER
                    </a>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
