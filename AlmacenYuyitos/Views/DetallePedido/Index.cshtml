@model AlmacenYuyitos.Models.DETALLEPEDIDO
@{
    ViewBag.Title = "Consultar Ordenes";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Seleccionar</h6>
        </div>
        <div>
            <br />
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ORDENPEDIDO.PROVEEDOR_PROVEEDORID, "RAZON SOCIAL", htmlAttributes: new { @class = "control-label col-md-6 offset-md-2" })
            <div class="col-md-6 offset-md-2">
                @Html.DropDownList("PROVEEDORID", ViewBag.listOrdenes as List<SelectListItem>, "Seleccionar Proveedor", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ORDENPEDIDO.PROVEEDOR_PROVEEDORID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ORDENPEDIDO.ORDENPEDIDOID, "N° DE ORDEN", htmlAttributes: new { @class = "control-label col-md-6 offset-md-2" })
            <div class="col-md-6 offset-md-2">
                @Html.DropDownList("ORDENPEDIDOID", new SelectList(string.Empty, "Value", "Text"), "Seleccionar Orden", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ORDENPEDIDO.ORDENPEDIDOID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <br />
        </div>
    </div>
}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Detalle</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="max-content" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                ITEM
                            </th>
                            <th>
                                DESCRIPCION
                            </th>
                            <th>
                                CANTIDAD
                            </th>
                            <th>
                                MEDIDA
                            </th>
                            <th>
                                PRECIO
                            </th>
                        </tr>
                    </thead>
                    <tbody id="detalle"></tbody>

                </table>
            </div>
        </div>

        <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
        <!-- Page level custom scripts -->
        <script src="~/Content/js/demo/datatables-demo.js"></script>
        <link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    </div>

<div id="tabla">
</div>

<div class="row">
    <div class="col-md-6 text-center">
        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <a href="@Url.Action("Index", "DetallePedido")" class="btn btn-primary btn-user btn-block">
                    LIMPIAR
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <div class="form-group">
            <div class="col-md-6 offset-md-3">
                <a href="@Url.Action("Create", "ORDENPEDIDO")" class="btn btn-success btn-user btn-block">
                    NUEVA ORDEN
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/ProveedorPedido.js"></script>
    <script src="~/Scripts/TablaDetallePedido.js">
