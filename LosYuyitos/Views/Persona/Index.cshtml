@model IEnumerable<LosYuyitos.Models.PERSONA>

@{
    ViewBag.Title = "Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-6">
            <h2>Personas</h2>

            <a href="/Persona/Create" class="btn btn-default">Nuevo Registro</a>
            <br /><br />


        </div>
        <div class="col-6 center-block">
            <p>Escriba algo en el campo de entrada para buscar.</p>
            <input class="form-control" id="myInput" type="text" placeholder="Filtar">
            <br />
        </div>
    </div>
</div>



    <div>
        <table class="table" id="myTable">
            <tr>
                <th>
                    @Html.Label("#")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RUT)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NOMBRE)
                </th>
                <th>
                    @Html.Label("APELLIDOS")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TELEFONO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FECHANACIMIENTO)
                </th>
                <th>
                    @Html.Label("DIRECCION")
                </th>

                <th></th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PERSONAID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RUT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NOMBRE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.APPATERNO)
                        @Html.DisplayFor(modelItem => item.APMATERNO)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TELEFONO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FECHANACIMIENTO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CALLE)
                        @Html.DisplayFor(modelItem => item.NUMERO)
                        -
                        @Html.DisplayFor(modelItem => item.COMUNA.NOMBRE)
                    </td>
                    <td class="d-flex">
                        @Html.ActionLink("Editar", "Edit", new { id = item.PERSONAID }, new { @class = "btn btn-primary editar d-none cursor-pointer" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.PERSONAID }, new { @class = "btn btn-primary editar d-none cursor-pointer" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.PERSONAID }, new { @class = "btn btn-danger btnEliminar mr-2 cursor-pointer" })
                    </td>
                </tr>
            }

        </table>

    </div>

    @section Scripts {
        <script src="~/Scripts/BuscarIndexPersona.js"></script>
    }

